<configuration>
	<appender name="CONSOLE-stdout" class="ch.qos.logback.core.ConsoleAppender">
  		<filter class="mthesis.input_converter.logging.StdOutFilter" />
  		<target>System.out</target>
		<encoder>
			<pattern>
				%d %-5level [%thread] %logger{40}:%L - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="CONSOLE-stderr" class="ch.qos.logback.core.ConsoleAppender">
  		<filter class="mthesis.input_converter.logging.ErrOutFilter" />
  		<target>System.err</target>
		<encoder>
			<pattern>
				%d %-5level [%thread] %logger{40}:%L - %msg%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<!-- deny all events with a level below INFO, that is TRACE  -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
		<encoder>
			<pattern>
				%d %-5level [%thread] %logger{80} %F:%L - %msg%n
			</pattern>
		</encoder>
		<file>log.txt</file>
		<append>false</append>
	</appender>
	
	<root level="TRACE">
		<appender-ref ref="CONSOLE-stdout" />
		<appender-ref ref="CONSOLE-stderr" />
		<appender-ref ref="FILE" />
	</root>
</configuration>